<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SubjectActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.NotenSpiegel.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/taskbar_black"
            android:gravity="center"
            app:popupTheme="@style/Theme.NotenSpiegel.PopupOverlay"
            app:titleTextColor="@color/text_light_gray" />

    </com.google.android.material.appbar.AppBarLayout>

    <include
        layout="@layout/content_subject"
        android:background="@color/dark_gray"
        android:backgroundTint="@color/dark_gray" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>